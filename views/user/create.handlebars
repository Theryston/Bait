	<title>Crie uma conta na Mycroway</title>
	<style>
		@font-face {
	    font-family: 'main-font';
	    src: url('/css/fonts/Poppins-Light.ttf');
	  }
	  
		body {
			font-family: 'main-font';
			background: rgb(32,33,37);
			color: white;
		}
		
		.container-form {
			border: 1px rgb(0, 140, 255) solid;
			padding: 20px;
			border-radius: 20px;
		}
		
		.container {
			margin-top: 50px;
		}
		
		h1 {
			font-size: 25pt;
		}
		
		.form-control {
			box-shadow: 2px 2px 6px black;
			border-radius: 8px;
			border: none;
			outline: none;
			color: #333;
		}
		
		.password {
			width: 100%;
			font-size: 15pt;
			position: relative;
		}
		
		.eye {
			position: absolute;
			top: 50%;
			transform: translateY(-50%);
			color: #111;
			right: 5px;
		}
		
	</style>
</head>
<body>
{{>_alert}}
{{#if error_msg}}
<script>
	MycrowayAlert({
		title: 'erro:',
		body: `{{error_msg}}`,
		button: 'OK, não tem problema!'
	})
</script>
{{/if}}
	<div class="container">
		<h1 class="mb-4">Crie sua conta:</h1>
		<div class="container-form">
			<h1 class="mb-5">Insira os dados abaixo:</h1>
			<form method="post" action="/user/create">
				<label for="name">Nome:</label>
				<input id="name" placeholder="digite aqui o seu nome" type="text" name="name" class="form-control" required> <br>
				<label for="email">E-mail:</label>
				<input id="email" placeholder="digite aqui o seu e-mail" type="email" name="email" class="form-control" required> <br>
				<label for="gender">Seu gênero:</label>
				<select name="gender" id="gender" class="form-control">
					<option value="male">masculino</option>
					<option value="female">feminino</option>
				</select><br>
				<label for="password">Senha: </label>
				<div class="password">
					<input placeholder="digite aqui a sua senha" id="password" type="password" class="form-control" name="password" required>
					<input type="hidden" id="redirect" name="redirect">
					<div class="EyeContainer">
						<i onclick="EyeFunc()" class="far eye fa-eye"></i>
					</div>
				</div>
				<button type="submit" class="MycrowayButton mt-5">Criar conta</button>
			</form>
		</div>
		<a href="/user/login"><button type="button" class="mt-5 MycrowayButton">Já tenho uma conta, fazer login!</button></a>
	</div>
	{{>_footer}}
	<script>
		const eye = document.querySelector('.eye')
		const EyeContainer = document.querySelector('.EyeContainer')
		const password = document.querySelector('#password')
		const redirect = document.querySelector('#redirect')
		var PasswordVisible = false
		var URL = document.URL
		var URLC = URL.replace('http://', '').replace('https://', '')
		var router = URLC.replace(URLC.substring(0,URLC.indexOf('/')), '')
		
		
		if (router == '/user/login') {
			router = false
		}
		
		redirect.value = router;
		
		function EyeFunc() {
			eye.innerHTML = ``
			
			if (!PasswordVisible) {
				EyeContainer.innerHTML = `<i onclick="EyeFunc()" class="far eye fa-eye-slash"></i>`
				password.type = 'text'
				PasswordVisible = true
			} else {
				EyeContainer.innerHTML = `<i onclick="EyeFunc()" class="far eye fa-eye"></i>`
				password.type = 'password'
				PasswordVisible = false
			}
			
			console.log(eye.classList.contains('fa-eye'))
		}
		
	</script>
</body>