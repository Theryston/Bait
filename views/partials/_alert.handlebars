<div class="AlertContainer AlertIsClosed">
	<div class="AlertBody">
		<h1 class="text-center AlertTitle mb-4"></h1>
		<div class="text-center AlertText"></div>
		<div class="alertFooter mt-4">
			<button class="alertFooterBtn BratilButton"></button>
		</div>
	</div>
</div>
<style>

	hr {
		background: white;
	}

	.AlertBody {
		width: 90vw;
		padding: 20px;
		min-height: 100px;
		background: rgb(32,33,37);
		border-radius: 15px;
	}

	.AlertContainer {
		position: fixed;
		top: 0px;
		left: 0px;
		width: 100vw;
		height: 100vh;
		background: rgba(0,0,0,0.8);
		z-index: 1000000;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.AlertIsOpen {
		display: flex;
	}

	.AlertIsClosed {
		display: none;
	}
	
	.AlertText {
		font-size: 11.5pt;
	}

</style>
<script>
	const alertFooterBtn = document.querySelector('.alertFooterBtn')
	const AlertContainer = document.querySelector('.AlertContainer')
	const AlertText = document.querySelector('.AlertText')
	const AlertTitle = document.querySelector('.AlertTitle')


	alertFooterBtn.addEventListener('click', () => {
		closeAlert()
	})

	function closeAlert() {
		AlertContainer.classList.replace('AlertIsOpen', 'AlertIsClosed')
	}

	function openAlert() {
		AlertContainer.classList.replace('AlertIsClosed', 'AlertIsOpen')
	}


	function BratilAlert(content) {
		
		if (content.body == undefined) {
			content.body = ''
		}
		
		if (content.body.length > 760) {
			content.body = 'O corpo (body) do pop-up nÃ£o pode (por motivo de estilo) ter mais do que 760 caracteres'
		}
		
		if (content.title == undefined) {
			content.title = ''
		}
		
		if (content.title.length > 15) {
			content.title = 'muito grande'
		}
		
		if (content.button == undefined) {
			content.button = ''
		}
		
		if (content.button.length > 35) {
			content.button = 'muito grande!'
		}
		
		AlertTitle.innerText = content.title.toUpperCase()
		AlertText.innerHTML = content.body
		alertFooterBtn.innerText = content.button

		openAlert()
	}

</script>