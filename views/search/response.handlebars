  <title>Brati Search - {{question}}</title>
  <style>
    @font-face {
    font-family: 'main-font';
    src: url('/css/fonts/Poppins-Light.ttf');
    }
    * {
      margin: 0px;
      padding: 0px;
      font-family: 'main-font';
    }
    body {
      background: rgb(32,33,37);
      color: white;
    }
  </style>
</head>
<body>
	
  <div style="position:absolute; top:50px; left:50%; transform:translateX(-50%);">
  		{{>search/form}}
  </div>
  <div class="container" style="margin-top: 150px;">
    <hr style="background-color:white;">
    <h1 style="margin-top:40px; font-size:25pt;" >Veja isso: </h1>
    <div id="loading" class="text-center">
      <div class="mt-4 spinner-grow bg-primary"></div>
    </div>
    <div id="res" style="margin-top:70px; margin-bottom:100px;">
      
    </div>
  </div>
  {{>_footer}}
  <script>
    var res = document.getElementById('res');
    var loading = document.getElementById('loading')
    var searchForm = document.getElementById('searchForm')
    textSearch = document.getElementById('text-search')
    
    {{#if question}}
    
    $.getJSON('/search/response/{{question}}', (respon) => {
      respon.response.forEach((this_response) => {
        
        loading.style.display = 'none'
        
        res.innerHTML += `<div class="mt-4 card"><div class="card-body" style="background:rgb(32,33,37);">
        <p>${this_response[0]}</p>
        <a href="/search/response/${this_response[1]}"><button class="nt-4 btn btn-outline-primary">Veja mais!</button></a>
        
        </div></div>`
        
      })
    })
    {{else}}
   loading.style.display = 'none'
    res.innerHTML = `<div class="mt-4 card"><div class="card-body" style="background:rgb(32,33,37);">
        <p>Nenhuma pesquisa foi feita, clique no butão abaixo e faça uma pesquisa agora!</p>
        <button onclick="document.getElementById('text-search').focus()" class="nt-4 btn btn-outline-primary">Pesquisar agora!</button>
        
        </div></div>`
    	$('#searchForm').submit((form) => {
      	res.innerHTML = ``
      	loading.style.display = 'block'
    		form.preventDefault();
    		
    		//getJ
    		
     	})
    {{/if}}
  </script>
  
